#include <stdio.h>

union Data {
  int i;
  float f;
};

int main() {
  union Data data;
  char choice;

  printf("Enter 'i' to store an integer or 'f' to store a float: ");
  scanf("%c", &choice);

  if (choice == 'i') {
    printf("Enter an integer value: ");
    scanf("%d", &data.i);
    printf("Value stored in the union: %d\n", data.i);
  } else if (choice == 'f') {
    printf("Enter a float value: ");
    scanf("%f", &data.f);
    printf("Value stored in the union: %f\n", data.f);
  } else {
    printf("Invalid choice.\n");
  }

  return 0;
}
